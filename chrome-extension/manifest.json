{
  "manifest_version": 3,
  "name": "API Key Hunter",
  "version": "1.2.0",
  "description": "Monitors websites for exposed API keys.",
  
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "webRequest"
  ],
  
  "host_permissions": [
    "<all_urls>"
  ],

  "background": {
    "service_worker": "background.js"
  },
  
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_start",
      "all_frames": true
    }
  ],
  
  "action": {
    "default_popup": "popup.html",
    "default_title": "API Key Hunter"
  },
  
  "options_page": "options.html",
  
  "web_accessible_resources": [
    {
      "resources": ["injected.js"],
      "matches": ["<all_urls>"]
    }
  ]
}